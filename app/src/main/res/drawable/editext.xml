<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Configurar el borde del rectángulo -->
    <stroke
        android:width="2dp"
        android:color="#808080"/> <!-- Color del borde, puedes cambiarlo según tus necesidades -->

    <!-- Configurar el color de fondo -->
    <solid android:color="#F0F0F0"/> <!-- Color de fondo, puedes cambiarlo según tus necesidades -->

    <!-- Configurar los bordes redondeados -->
    <corners android:radius="3dp"/> <!-- Ajusta el radio para redondear los bordes -->

    <!-- Configurar padding opcional -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>

